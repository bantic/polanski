<% if Rails.env == "development" %>
  <script type="text/javascript">
    var disqus_developer = 1;
  </script>
<% end %>
<% page_status = if flash[:vote]
    flash[:vote]
  else
    @vote_count.jail_him > @vote_count.free_him ? "JAIL" : "FREE"
  end
  
  body_class = page_status == "JAIL" ? "black" : "blue"
%>
<body class="<%= body_class %>">
  <div class='container'>
    <h1><span class='yellow'>POLL</span>anski: Jail him or Free him?</h1>
  
    <% img = page_status == "JAIL" ? "jailed.png" : "freed.png" %>
  
    <table>
      <tr>
        <td colspan='2' align='center'>
          <%= image_tag img, :class => "result_img" %>
        </td>
      </tr>
      <tr>
        <td width="50%" align='right'>
          <div class='voteresult'>
            <h2 class='jail'>Jail him!</h2><br />
            <span class='vote_counts'><%= @vote_count.jail_him %> votes</span>
          </div>
        </td>
        <td width="50%" align='left'>
          <div class='voteresult'>
            <h2 class='free'>Free him!</h2><br />
            <span class='vote_counts'><%= @vote_count.free_him %> votes</span>
          </div>
        </td>
      </tr>
    </table>
    
    <div id="disqus_thread"></div><script type="text/javascript" src="http://disqus.com/forums/pollanski/embed.js"></script><noscript><a href="http://disqus.com/forums/pollanski/?url=ref">View the discussion thread.</a></noscript><a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>
    
  </div>
  <div id='footer'>
    <%= link_to "about", "/about" %> | <a href='mailto:writetojilee@gmail.com'>contact</a>
  </div>
  <script type="text/javascript">
  var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
  document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
  </script>
  <script type="text/javascript">
  try {
  var pageTracker = _gat._getTracker("UA-11077036-1");
  pageTracker._trackPageview();
  } catch(err) {}</script>
